<head>
  <%= stylesheet_link_tag 'devise/login'%>

  <% content_for :title do %>
    <!--This block removes application title from view -->
  <% end %>
</head>


<body>
  <div class="wrapper fadeInDown">
    <div id="formContent">
      <!-- Tabs Titles -->
  
      <!-- Icon -->
      <div class="fadeIn first" id="icon-container">
        <img src="/assets/text logo.png" id="icon" alt="User Icon">
      </div>
  
      <!-- Login Form -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="fadeIn second">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "form-field" %>
        </div>
      
        <div class="fadeIn third">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "form-field"  %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="fadeIn fourth">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
  
      <!-- Remind Passowrd -->
      <div id="formFooter">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</body>




