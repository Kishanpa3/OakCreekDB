<head>
  <%= stylesheet_link_tag 'devise/login'%>
  <% no_content_for :title %>
  <% no_content_for :alerts %>
</head>


<body>
  <div class="wrapper fadeInDown">
    <div id="formContent">
      <!-- Tabs Titles -->
  
      <!-- Icon -->
      <div class="fadeIn first" id="icon-container">
        <%= image_tag("text logo.png", id: "icon", alt: "Oak Creek DB text logo") %>
      </div>
  
      <div id="form_modal">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= render "layouts/alerts" %>
        
          <div class="field fadeIn first">
            <%= f.label :first_name, style: 'display: none' %><br />
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "first name", class: "form-field" %>
          </div>
          
          <div class="field fadeIn first">
            <%= f.label :last_name, style: 'display: none' %><br />
            <%= f.text_field :last_name, autocomplete: "last_name", placeholder: "last name", class: "form-field" %>
          </div>
        
          <div class="field fadeIn second">
            <%= f.label :email, style: 'display: none' %><br />
            <%= f.email_field :email, autocomplete: "email", placeholder: "email", class: "form-field" %>
          </div>
        
          <div class="field fadeIn third">
            <%= f.label :password, style: 'display: none' %><br />
            <% if @minimum_password_length %>
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "password (#{@minimum_password_length} characters minimum)", class: "form-field"  %>
              <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
            <% else %>
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "password", class: "form-field"  %>
            <% end %>
          </div>
        
          <div class="field fadeIn third">
            <%= f.label :password_confirmation, style: 'display: none' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "confirm password", class: "form-field" %>
          </div>
        
          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>
          
        <div id="formFooter">
          <%= render "devise/shared/links", form: 'sign_up' %>
        </div>
      </div>
    </div>
  </div>
</body>


