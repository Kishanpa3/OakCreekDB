!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, shrink-to-fit=no"}
    
    %title Oak Creek Zoological Conservatory
    %script{:type => "text/javascript", :src=> "https://code.jquery.com/jquery-3.4.1.slim.min.js", :integrity=> "sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n", :crossorigin=> "anonymous"}
    %script{:type => "text/javascript", :src => "https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js", :integrity =>"sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q", :crossorigin => "anonymous"}
    %script{:type => "text/javascript", :src=> "https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js", :integrity=> "sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM", :crossorigin=> "anonymous"}
    %link{:rel => :stylesheet, :type => "text/css", :href => "https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css", :crossorigin=>"anonymous"}
    - unless content_for?(:stylesheet)
      = stylesheet_link_tag "application", 'media' => 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    
  %body
    - unless content_for?(:title)
      %nav#topnav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-5
        %button.navbar-toggler{"aria-controls" => "navbarTogglerDemo03", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarTogglerDemo03", "data-toggle" => "collapse", :type => "button"}
          %span.navbar-toggler-icon
        %div.logo
          = link_to image_tag("logo-notext.png"), animals_path, id: "nav-logo", class: "logo-items"
          = link_to 'OakCreekDB', root_path, id: "nav-text", class: "navbar-brand nav-link logo-item"
        #navbarTogglerDemo03.collapse.navbar-collapse
          %ul.navbar-nav.mr-auto.mt-2.mt-lg-0
            %li.nav-item.active
              = link_to 'Home', animals_path, class: "nav-link"
          = link_to "#{current_user.first_name} #{current_user.last_name}", edit_user_registration_path, class: "nav-link"
          - if current_user.admin?
            = link_to 'Admin Dashboard', users_index_path, :class => "btn btn-primary float-right"
          = link_to 'Logout', destroy_user_session_path, :method => :delete, :class => "btn btn-danger float-right ml-2"
          // %form.form-inline.my-2.my-lg-0
          //   %input.form-control.mr-sm-2{"aria-label" => "Search", :placeholder => "Search", :type => "search"}/
          //   %button.btn.btn-outline-success.my-2.my-sm-0{:type => "submit"} Search
    
    - unless content_for?(:alerts)
      = render "layouts/alerts"

    = yield
