%ul.nav.nav-tabs
  %li.nav-item.nav-link
    = link_to 'Details', details_animal_path(@animal)
  %li.nav-item.nav-link{:role => "tab"}
    = link_to 'Diet', animals_path
  %li.nav-item.nav-link{:role => "tab"}
    = link_to 'Documents', animals_path

%ul.nav.nav-pills
  %li.nav-item.nav-link
    = link_to 'Back to Animal List', animals_path, :class => "btn btn-primary"
  %li.nav-item.nav-link
    = link_to 'Edit', edit_animal_path(@animal), :class => "btn btn-primary"
  %li.nav-item.nav-link
    = link_to 'Delete', animal_path(@animal), :method => :delete, :confirm => 'Are you sure?', :class => "btn btn-danger"

