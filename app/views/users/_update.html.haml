%div.modal-header
  %h5#exampleModalLongTitle.modal-title #{user.first_name} #{user.last_name}
  %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
    %span{"aria-hidden" => "true"} Ã—
%div.modal-body
  = form_with url: users_update_path, :method => :get, :html => { :onsubmit => "$('#myModal_' + #{user.id}).modal('toggle');" } do |f|
    %div.form-row
      %div.form-group.col-sm-6
        = label :user, :first_name, 'First Name'
        = text_field "users[#{user.id}]", 'first_name', value: user.first_name, :class => "form-control"
      %div.form-group.col-sm-6
        = label :user, :last_name, 'Last Name'
        = text_field "users[#{user.id}]", 'last_name', value: user.last_name, :class => "form-control"
    %div.form-row
      %div.form-group.col-sm-12
        = label :user, :email, 'Email'
        = text_field "users[#{user.id}]", 'email', value: user.email, :class => "form-control"
    %div.form-row
      %div.form-group.col-sm-3{ :style => "border-right: 1px solid #333;" } 
        = label :user, :admin, 'Administrator'
        = f.check_box "users[#{user.id}][admin]", {checked: user.admin, :class => "form-control"}, 'true', 'false'
      %div.form-group.col-sm-2.ml-3
        = label :user, :can_view, 'View'
        = f.check_box "users[#{user.id}][can_view]", {checked: user.can_view, :class => "form-control"}, 'true', 'false'
      %div.form-group.col-sm-2
        = label :user, :can_edit, 'Edit'
        = f.check_box "users[#{user.id}][can_edit]", {checked: user.can_edit, :class => "form-control"}, 'true', 'false'
      %div.form-group.col-sm-2
        = label :user, :can_add, 'Add'
        = f.check_box "users[#{user.id}][can_add]", {checked: user.can_add, :class => "form-control"}, 'true', 'false'
      %div.form-group.col-sm-2
        = label :user, :can_delete, 'Delete'
        = f.check_box "users[#{user.id}][can_delete]", {checked: user.can_delete, :class => "form-control"}, 'true', 'false'
    %div.modal-footer.flex-row
      %div.col-7.p-0
        Created:
        %em
          = local_time(user.created_at)
      %div.col-5.p-0
        %div.float-right 
          = submit_tag 'Update', :id => "form_submit", :class => "btn btn-primary mr-2"
          %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Close
        
        
        
